# Environment variables for the bad word detector project
USE_GPU=true

# Allow GPU memory growth
TF_FORCE_GPU_ALLOW_GROWTH=true

# Make CUDA visible to PyTorch
# CUDA_VISIBLE_DEVICES=0

# Batch size for training (reduce if OOM errors occur)
BATCH_SIZE=8

# Number of epochs 
EPOCHS=5

# Sample size for faster training (set to 0 for full dataset)
SAMPLE_SIZE=0
